<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/material_dimen80"
    android:paddingStart="@dimen/material_dimen16"
    android:paddingEnd="@dimen/material_dimen16"
    >

  <androidx.appcompat.widget.AppCompatImageView
      android:id="@+id/fav_icon"
      android:layout_width="@dimen/material_dimen72"
      android:layout_height="@dimen/material_dimen72"
      android:gravity="center"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/station_name"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_marginStart="@dimen/material_dimen16"
      android:gravity="start|center"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/fav_icon"
      app:layout_constraintWidth_default="spread"
      tools:text="station name"
      />

</androidx.constraintlayout.widget.ConstraintLayout>